<Window x:Class="BEE2.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutBox" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False"
        >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <TextBlock Name="productNameBox" Text="productNameBox" Grid.Row="0" />
            <TextBlock Name="versionBox" Text="versionBox" Grid.Row="1" />
            <TextBlock Name="copyrightBox" Text="copyrightBox" Grid.Row="2" />
            <TextBlock Name="companyNameBox" Text="companyNameBox" Grid.Row="3" />
            <TextBlock Name="descriptionBox" Text="descriptionBox" Grid.Row="4" />
            <Button Grid.Row="5" Width="100" HorizontalAlignment="Right" Content="Okay" Click="okayButton_Click" />
        </Grid>
    </Grid>
</Window>
